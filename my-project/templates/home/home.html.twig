{% extends 'base.html.twig' %}

{% block title %} Jumperpich | Jumperpich.com  {% endblock %}


{% block body %}


    <div class="container-fluid main">


        {% for message in app.flashes('notice') %}
            <div class="fixed-bottom alert alert-warning alert-dismissible fade show" role="alert">
                <strong>Warning !</strong> {{ message }}
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        {% endfor %}
        {% for message in app.flashes('success') %}
            <div class="fixed-top alert alert-success alert-dismissible fade show col-md-4 col-md-offset-4"
                 align="center" role="alert">
                <strong>Succès !</strong> {{ message }}
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        {% endfor %}

        <div id="loading">
            <img src="{{ asset('pictures/loader.gif') }}" alt="Website Loader">
        </div>


        <div class="m-0 jumbotron jumbotron-fluid "
             style="background: #000 url('{{ asset('pictures/Background_header.jpg') }}') center no-repeat fixed ;min-height: 100vh;">

            <div class="container text-white header text-center">

                <h1 style="font-size: 6vh">{% trans %}BIENVENUE{% endtrans %}.</h1>

                <div class="homepage-text">
                    <div class="bottom-icon">
                        <a id="go-to-podcast" href="#" class="btn btn__custom btn-lg" role="button"
                           data-toggle="tooltip" data-placement="left"><i class="fas fa-arrow-down"></i> </a>
                    </div>
                </div>
            </div>
        </div>

        <div id="podcast" class="parallax-one m-0"
             style="background: #000 url('{{ asset('pictures/parallax3.jpg') }}') center no-repeat fixed">
            <div class="quote1-pattern" id="parallax-one"
                 style="background: url('{{ asset('pictures/services-banner.png') }}');">

            </div>
            <div class="row m-0">
                <div>
                    <h1 class="parallax-title"><img src="{{ asset('pictures/podcasts.PNG') }}"></h1>
                </div>
            </div>
        </div>

        <div class="container my-4 py-4 text-center" id="recent">

            <h6><abbr >{% trans %}Les plus récents{% endtrans %}</abbr></h6>

            <div class="row my-4 pt-4 d-flex flex-wrap m15">

                {% for projet in last %}

                    <article class="mix col-12 col-md-6 col-lg-4 col-xl-4 article">

                        <a href="{{ path('projet.show', {'id': projet.id, "slug": projet.slug}) }}"
                           aria-label="Read more about {{ projet.title }}">

                            <figure class="d-block figure">
                                <img class="image w-100 h-auto" {% if projet.filename %} src="{{ vich_uploader_asset(projet, 'imageFile') | imagine_filter('thumb') }}"
                                {% else %} src="{{ 'images/projets/empty.jpg' | imagine_filter('thumb') }}"
                                {% endif %} alt="thumb_{{ projet.title }}">

                                <div class="middle">
                                    <i class="far fa-play-circle text"></i>
                                </div>

                            </figure>

                        </a>

                        <div class="info infos">

                            <div class="row flex-wrap m15">

                                <div class="col-12 mw-100 info_flex">

                                    <div class="info__content d-flex align-items-center w-100">

                                        <h1 class="mt-0 pt-0 mb-0 text-uppercase flex-grow-1"
                                            style="font-size: 1rem"><a
                                                    href="{{ path('projet.show', {'id': projet.id, "slug": projet.slug}) }}"
                                                    aria-label="Read more about {{ projet.title }}">{{ projet.title }}
                                            </a> </h1>
                                        <div class="info__content__buttons align-self-end">
                                            {% for tag in projet.tags %}
                                                <div class="d-inline-block tag"
                                                     style="color:{% if tag.id == 1 %}red{% endif %}{% if tag.id == 2 %}orange{% endif %}{% if tag.id == 3 %}#8ee800{% endif %}">
                                                    <div>{{ tag.name }}</div>
                                                </div>
                                            {% endfor %}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </article>
                {% endfor %}

            </div>

            <div class="text-center mt-4">
                <a href="{{ path('lastest') }}" class="btn btn__custom">
                    {% trans %}VOIR TOUT{% endtrans %}</a>
            </div>
        </div>

        <div class="container my-4 py-4 text-center" id="popular">

            <h6><abbr>{% trans %}Les plus populaires{% endtrans %}</abbr></h6>

            <div class="row my-4 pt-4 flex-wrap m15">

                {% for projet in views %}

                    <article class="mix col-12 col-md-6 col-lg-4 col-xl-4 article">

                        <a href="{{ path('projet.show', {'id': projet.id, "slug": projet.slug}) }}"
                           aria-label="Read more about {{ projet.title }}">

                            <figure class="d-block figure">
                                <a href="{{ path('projet.show', {'id': projet.id, "slug": projet.slug}) }}"
                                   aria-label="Read more about {{ projet.title }}">

                                    <img class="image w-100 h-auto" {% if projet.filename %} src="{{ vich_uploader_asset(projet, 'imageFile') | imagine_filter('thumb') }}"
                                    {% else %} src="{{ 'images/projets/empty.jpg' | imagine_filter('thumb') }}"
                                    {% endif %} alt="thumb_{{ projet.title }}">

                                <div class="middle">
                                    <i class="far fa-play-circle text"></i>
                                </div>

                                </a>
                            </figure>

                        </a>

                        <div class="info infos">
                            <div class="row flex-wrap m15">
                                <div class="col-12 mw-100 info_flex">
                                    <div class="info__content d-flex align-items-center w-100">
                                        <h1 class="mt-0 pt-0 mb-0 text-uppercase flex-grow-1" style="font-size: 1rem">
                                            <a href="{{ path('projet.show', {'id': projet.id, "slug": projet.slug}) }}" aria-label="Read more about {{ projet.title }}">{{ projet.title }}</a></h1>
                                        <div class="info__content__buttons align-self-end">
                                            {% for tag in projet.tags %}
                                                <div class="d-inline-block tag" style="color:{% if tag.id == 1 %}red{% endif %}{% if tag.id == 2 %}orange{% endif %}{% if tag.id == 3 %}#8ee800{% endif %}">
                                                    <div>{{ tag.name }}</div>
                                                </div>
                                            {% endfor %}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </article>

                {% endfor %}

            </div>

            <div class="text-center mt-4">
                <a href="{{ path('ranking') }}" class="btn btn__custom">
                    {% trans %}VOIR TOUT{% endtrans %}</a>
            </div>
        </div>

        <div class="container my-4 py-4 text-center" id="social">

            <h6><abbr>SOCIAL MEDIAL</abbr></h6>

            <div class="my-4 pt-4">

                <div class="text-center">

                    <div class="logo-social"><a href="https://www.facebook.com/JumperpichMusic" target="blank"><img
                                    src="{{ asset('pictures/facebook.jpg') }}" style="width:87%" alt="Facebook"></a>
                    </div>

                    <div class="logo-social"><a href="https://www.youtube.com/user/JumperPichMusic" target="blank"><img
                                    src="{{ asset('pictures/youtube.jpg') }}" style="width:87%" alt="YouTube"></a></div>

                    <div class="logo-social"><a href="https://soundcloud.com/jumperpich" target="blank"><img
                                    src="{{ asset('pictures/soundcloud.jpg') }}" style="width:87%" alt="Soundcloud"></a>
                    </div>

                </div>

            </div>

        </div>

    </div>


{% endblock %}
