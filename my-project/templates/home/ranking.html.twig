{% extends 'base.html.twig' %}

{% block title %} Jumperpich | {% trans %}Les plus populaires{% endtrans %} {% endblock %}

{% block body %}



    <div class="container mt-4 pt-2 pb-4 reveal">

        <h1 class="text-center h2home mt-4 pt-4 reveal-1" style="background: rgba(0,0,0,.7);padding: 20px 20px;;min-height: 41px;">{% trans %}LES PLUS POPULAIRES !{% endtrans %}</h1>

        <div class="row mt-4 reveal-2">
            {% for projet in views %}
                <article class="mix col-12 col-md-6 col-lg-4 col-xl-4 stagger reveal-3 cont"
                         style="margin-bottom: 30px;">

                    <a class="link"
                       href="{{ path('projet.show', {'id': projet.id, "slug": projet.slug}) }}" title="More details">

                        <figure class="ng-tns-c4-2"
                                style=" display: block;padding: 10px;margin-bottom: 5px;background: rgba(0,0,0,.7);">
                            <div class="" style="">
                                <img class="image" {% if projet.filename %}
                                    src="{{ vich_uploader_asset(projet, 'imageFile') | imagine_filter('thumb') }}"
                                {% else %}
                                    src="{{ 'images/projets/empty.jpg' | imagine_filter('thumb') }}"
                                {% endif %} alt="July 2019" style="width: 100%;height: auto">
                            </div>
                        </figure>

                        <div class="middle">
                            <div class="text"><i class="fas fa-download"></i></div>
                        </div>
                    </a>

                    <div class="info" style="background: rgba(0,0,0,.7);padding: 0 10px;min-height: 41px;">

                        <div class="row" style=" display: flex;flex-wrap: wrap;margin-right: -15px;margin-left: -15px;">

                            <div class="col-12" style="flex: 0 0 100%;max-width: 100%;">

                                <div class="info__content" style="display: flex;align-items: center;width: 100%;">

                                    <h1 style="font-size: 1rem; margin-top: 0; padding-top: 0; margin-bottom: 0;text-transform: uppercase;flex-grow: 1;"><a href="{{ path('projet.show', {'id': projet.id, "slug": projet.slug}) }}">{{ projet.title }}</h1>
                                    <div class="info__content__buttons" style="align-self: flex-end;">
                                        {% for tag in projet.tags %}
                                            <div class="style"
                                                 style="padding-left: 10px;color: #eee;line-height: 41px;display: inline-block;vertical-align: top;max-width: none!important;{% if tag.id == 1 %} color:red {% endif %}{% if tag.id == 2 %} color:orange {% endif %}{% if tag.id == 3 %} color:#8ee800 {% endif %}">
                                                <div>{{ tag.name }}</div>
                                            </div>
                                        {% endfor %}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="info info_bis" style="background: rgba(0,0,0,.7);padding: 0 10px;min-height: 41px;">

                        <div class="row" style=" display: flex;flex-wrap: wrap;margin-right: -15px;margin-left: -15px;">

                            <div class="col-12" style="flex: 0 0 100%;max-width: 100%;">

                                <div class="info__content" style="display: flex;align-items: center;width: 100%;">
                                    <h1 style="font-size: 1rem; margin-top: 0; padding-top: 0; margin-bottom: 0;text-transform: uppercase;flex-grow: 1;"> Vues :</h1>

                                    <div class="info__content__buttons" style="align-self: flex-end;">

                                        <div class="style" style="padding-left: 10px;color: #eee;line-height: 41px;display: inline-block;vertical-align: top;max-width: none!important;">
                                            {{ projet.views }} <i class="far fa-eye"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </article>
            {% endfor %}
        </div>

        <div class="text-center mt-4">
            <a href="{{ path('home') }}" class="btn btnhome f_size">
                ‚Üê {% trans %}Retour{% endtrans %}  </a>
        </div>
    </div>

{% endblock %}
