<div class="site-header fixed-top">

    <nav class="navbar navbar-expand-lg background_navbar" id="main-nav">

        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"
                style="color: rgba(255,255,255,.5);
    border-color: rgba(255,255,255,.1);padding: .25rem .75rem;
    font-size: 1.25rem;
    line-height: 1;
    background-color: transparent;
    border: 1px solid transparent;
    border-radius: .25rem;">
            <span class="navbar-toggler-icon text-right"> <img
                        src="data:image/svg+xml,%3csvg viewBox='0 0 30 30' xmlns='http://www.w3.org/2000/svg'%3e%3cpath stroke='rgba(255, 255, 255, 0.5)' stroke-width='2' stroke-linecap='round' stroke-miterlimit='10' d='M4 7h22M4 15h22M4 23h22'/%3e%3c/svg%3e" alt="hamburger_menu_icon"> </span>
        </button>

        <div class="collapse navbar-collapse justify-content-center" id="navbarSupportedContent">
            <ul class="navbar-nav">


                <li class="nav-item px-2{% if current_menu is defined and current_menu == 'home' %} active current{% endif %}">
                    <a class="nav-link" href="{{ path('home') }}">{% trans %}ACCUEIL{% endtrans %}</a>
                </li>

                <li class="nav-item px-2{% if current_menu is defined and current_menu == 'mixes' %} active current{% endif %}">
                    <a class="nav-link" href="{{ path('projet.index') }}"> MIXES</a>
                </li>

                <li class="nav-item px-2{% if current_menu is defined and current_menu == 'contact' %} active current{% endif %}">
                    <a class="nav-link" href="{{ path('contact') }}">CONTACT</a>
                </li>


                {% if is_granted('ROLE_ADMIN') %}

                    <li class="nav-item px-2{% if current_menu is defined and current_menu == 'administration' %} active current{% endif %}">
                        <a class="nav-link"  href="{{ path('admin.projet.index') }}"> ADMINISTRATION </a>
                    </li>

                    <li class="nav-item px-2 {% if current_menu is defined and current_menu == 'messages' %} active current{% endif %}">
                        <a class="nav-link" href="{{ path('messages_contact') }}"

                        {% if NewMessages_g.CountMessages() | length > 0 %}style="color:RED" {% endif %}>

                            {% if NewMessages_g.CountMessages() | length == 1 %}
                            {{ NewMessages_g.CountMessages() | length }} nouveau message
                            {% elseif NewMessages_g.CountMessages() | length > 1 %}
                                {{ NewMessages_g.CountMessages() | length }} nouveaux messages
                            {% else %}
                            Aucun nouveau message
                            {% endif %}
                        </a>
                    </li>
                    <li class="nav-item px-2">
                        <a class="nav-link" onclick="window.location.href ='{{ path('security_logout') }}'"
                           style="cursor: pointer">DECONNEXION</a>
                    </li>
                {% endif %}
            </ul>
            <div class="navbar-nav">


                {% if app.request.locale in ['fr','fr_BE','fr_BJ','fr_BF','fr_BI','fr_CM','fr_CA','fr_CF','fr_TD','fr_KM',
                    'fr_CG', 'fr_CD','fr_CI','fr_DJ','fr_GQ','fr_FR','fr_GA','fr_GP','fr_GN','fr_LU','fr_MG','fr_ML','fr_MQ',
                    'fr_MC','fr_NE','fr_RW','fr_RE','fr_BL','fr_MF','fr_SN','fr_CH','fr_TG'] %}

                    <div class="dropdown open">
                        <button class="btn dropdown-toggle"
                                type="button" id="dropdownMenu5" data-toggle="dropdown"
                                aria-haspopup="true" aria-expanded="false" style="color:grey">
                            <img src="{{ asset('pictures/flags/fr.png') }}" width="35" height='35' alt="french">
                        </button>
                        <div class="dropdown-menu" style="min-width:0;background-color: #2e3436;
                             border: solid 2px white">
                            <a class="dropdown-item" href="{{ path('switch_language_english') }}"> <img
                                        src="{{ asset('pictures/flags/en.png') }}" width="35" height='35'
                                        alt="english"></a>
                        </div>
                    </div>

                {% else %}

                    <div class="dropdown open">
                        <button class="btn dropdown-toggle"
                                type="button" id="dropdownMenu5" data-toggle="dropdown"
                                aria-haspopup="true" aria-expanded="false" style="color:grey">
                            <img src="{{ asset('pictures/flags/en.png') }}" width="35" height='35' alt="english">
                        </button>
                        <div class="dropdown-menu" style="min-width:0;background-color: #2e3436;
                             border: solid 2px white">
                            <a class="dropdown-item" href="{{ path('switch_language_fr') }}"> <img
                                        src="{{ asset('pictures/flags/fr.png') }}" width="35" height='35'
                                        alt="french"></a>
                        </div>
                    </div>
                {% endif %}
            </div>
        </div>
    </nav>

</div>

