{% extends 'base.html.twig' %}

{% block body %}


    <div class="container pt-4">

        <h1 class="text-center h2home mt-4 pt-4" style="background: rgba(0,0,0,.7);padding: 20px 20px;;min-height: 41px;"> NOUVEAU MIX </h1>

    <div class="container mt-4">
        {{ form_start(form) }}
        {% for message in app.flashes('warning') %}
            <div class="fixed-top alert alert-warning alert-dismissible fade show col-md-4 col-md-offset-4" align="center" role="alert">
                <strong>Warning !</strong> {{ message }}
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        {% endfor %}

        {{ form_widget(form) }}
        <button class="btn btnhome">Publier</button>
        {{ form_end(form) }}
    </div>
    </div>

{% endblock %}